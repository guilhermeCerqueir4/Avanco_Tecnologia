<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="avc.com.avanco.CartActivity">


    <RelativeLayout
        android:id="@+id/rli1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true">



    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />



        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/rli5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#616659"
        android:layout_below="@id/rli1"
        >



        <Button
            android:id="@+id/limpar_carrinho_button"
            android:layout_width="200dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:text="LIMPAR CARRINHO"
            android:textSize="19dp"
            android:drawableLeft="@drawable/ic_limpar"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:background="#eaed18"
            android:textColor="@android:color/background_dark"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />



        ></RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rli5"
        android:layout_above="@+id/next_process_button"
        android:background="#616659"

        >


    </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/next_process_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:text="FECHAR PEDIDO"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            ></Button>




</RelativeLayout>
