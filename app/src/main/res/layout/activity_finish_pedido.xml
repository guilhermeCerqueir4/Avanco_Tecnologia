<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616659"
    tools:context="avc.com.avanco.FinishPedidoActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/avanco_logo_invert" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obrigado por comprar conosco!"
        android:textSize="18dp"
        android:layout_below="@id/img"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifique seu e-mail! "
        android:textSize="18dp"
        android:layout_below="@id/txt"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Os dados de sua compra e boleto bancÃ¡rio foram enviados para ele."
        android:textSize="18dp"
        android:layout_below="@id/txt2"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/volta_inicio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="VOLTAR PARA INICIO!"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        />



</RelativeLayout>
